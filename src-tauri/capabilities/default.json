{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main",
    "settings"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "core:webview:allow-create-webview-window",
    "core:window:allow-show",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$DOCUMENT/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$HOME/**" },
        { "path": "$DOWNLOAD/**" }
      ]
    },
    "fs:allow-mkdir",
    "fs:allow-write-text-file",
    "fs:allow-read-text-file",
    "fs:allow-read-dir",
    "fs:allow-exists",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "git",
          "cmd": "git",
          "args": true
        }
      ]
    }
  ]
}